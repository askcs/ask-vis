extends layout

block body
  .container-fluid(ng-controller='AppCtrl')
    .row
      .col-md-11.col-md-offset-1
        h2 Timeline
    .row

      .col-md-2.col-md-offset-1
        .list-group
          a.list-group-item(ng-click='loadDataSet(1)') Data Set 1
          a.list-group-item(ng-click='loadDataSet(2)') Data Set 2

      .col-md-8

        time-line(items='items',
        timeline='timeline')
        br

        form.form-inline(role='form')
          .form-group(style='margin-right: 15px')
            label.sr-only Custom time:
            input.form-control(type='date',
            ng-model='customDate')
          .btn-group(style='margin-right: 15px')
            button.btn.btn-default(type='submit',
            ng-click='timeliner.setCustomTime(customDate)') Set custom time
          span {{timeliner.customDate}}

block live-reload
  script(src='http://localhost:35729/livereload.js?snipver=1')